{
  "name": "@kibibit/tdd1t",
  "version": "0.0.0-development",
  "description": "A probot for GitHub that makes sure your feature specs match your tests",
  "author": "Neil Kalman <Neilkalman@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/kibibit/tdd1t.git",
  "homepage": "http://kibibit.io/tdd1t/",
  "bugs": "https://github.com/kibibit/tdd1t/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "./deploy-pre-script.sh",
    "start:bot": "probot run ./index.js",
    "lint": "eslint ./lib/*.js",
    "lint:fix": "eslint --fix ./lib/*.js",
    "commit": "git-cz",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "test:cov": "jest --coverage",
    "coveralls": "npm run test:cov && cat ./test-results/lcov.info | coveralls",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": false,
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "atob": "^2.1.2",
    "probot": "^7.2.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "jsonfile": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-angular": "^7.1.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.5",
    "@semantic-release/github": "^5.2.5",
    "@semantic-release/npm": "^5.1.1",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "all-contributors-cli": "^6.0.0",
    "commitizen": "3.0.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.10.0",
    "eslint-plugin-lodash": "^5.1.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-html-reporter": "^2.4.2",
    "nock": "^10.0.0",
    "nodemon": "^1.17.2",
    "semantic-release": "^15.12.4",
    "semantic-release-cli": "^5.3.1",
    "smee-client": "^1.0.2",
    "travis-deploy-once": "^5.0.9"
  },
  "greenkeeper": {
    "ignore": [
      "commitizen"
    ]
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "coverageDirectory": "./test-results",
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "achievibit's Test Report",
          "outputPath": "./test-results/test-report.html"
        }
      ]
    ]
  }
}
